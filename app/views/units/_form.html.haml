= form_for(@unit) do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2
        = pluralize(@unit.errors.count, "error")
        prohibited this unit from being saved:
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
  .field
  %td= f.label :name
  %td= f.text_field :name
  .field
  %td= f.label :description
  %td= f.text_area :description
  .actions
  %td= f.submit
