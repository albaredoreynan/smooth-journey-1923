.block
  = render 'shared/menu/database'
  .content
    %h2 Units
    .inner
      %table.table_form
        = form_tag units_path, :method => 'get' do
          %tr
            %td Unit
            %td= text_field_tag :search, params[:search]
            %td= submit_tag "Search", :name => nil
      %table
        %tr
          %th Name
          %th Description
          %th.actions Actions
        - @units.each do |unit|
          %tr
            %td= unit.name
            %td= unit.description
            %td
              = link_to 'Show', unit
              = link_to 'Edit', edit_unit_path(unit)
              = link_to 'Destroy', unit, :confirm => 'Are you sure?', :method => :delete
      = link_to 'New Unit', new_unit_path, :class => 'button'
