<table>
<% form_tag units_path, :method => 'get' do %>
	<tr>
		<td>Unit</td>
		<td><%= text_field_tag :search, params[:search] %></td>
		<td><%= submit_tag "Search", :name => nil %></td>
	</tr>
<% end %>
</table>

<table border="1">
  <tr>
    <th>Unit name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.unit_name %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

