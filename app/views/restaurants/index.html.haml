.block
  .content
    %h2 Restaurants
    .inner
      %table
        %tr
          %th Store
          %th Restaurant name
          %th Company
          %th Restaurant description
          %th Currency
          %th
          %th
          %th
        - @restaurants.each do |restaurant|
          %tr
            %td= restaurant.store_id
            %td= restaurant.restaurant_name
            %td= restaurant.company_id
            %td= restaurant.restaurant_description
            %td= restaurant.currency_id
            %td
              = link_to 'Show', restaurant
              = link_to 'Edit', edit_restaurant_path(restaurant)
              = link_to 'Destroy', restaurant, :confirm => 'Are you sure?', :method => :delete
      = link_to 'New Restaurant', new_restaurant_path, :class => :button
