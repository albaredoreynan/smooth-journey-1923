.block
  = render 'shared/menu/database'
  .content
    .title_action_bar
      %h2.title Restaurants
      .new_actions
        = link_to 'New Restaurant', new_restaurant_path, :class => :button
    .inner
      %table
        %tr
          %th Name
          %th Company
          %th Description
          -# %th Currency
          %th.actions Actions
        - @restaurants.each do |restaurant|
          %tr
            %td= restaurant.name
            %td= link_to restaurant.company.name, company_path(restaurant.company.id)
            %td= restaurant.description
            -# %td= restaurant.currency_id
            %td
              = link_to 'Show', restaurant
              = link_to 'Edit', edit_restaurant_path(restaurant)
              = link_to 'Destroy', restaurant, :confirm => 'Are you sure?', :method => :delete
      = paginate @restaurants
