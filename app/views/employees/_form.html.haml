= form_for(@employee) do |f|
  - if @employee.errors.any?
    #error_explanation
      %h2
        = pluralize(@employee.errors.count, "error")
        prohibited this employee from being saved:
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :employee_firstName, 'First Name'
    %br/
    = f.text_field :employee_firstName
  .field
    = f.label :employee_lastName, 'Last Name'
    %br/
    = f.text_field :employee_lastName
  .field
    = f.label :branch_id, 'Branch'
    %br/
    = f.text_field :branch_id
  .field
    = f.label :employee_dateEmployed, 'Date Employed'
    %br/
    = f.date_select :employee_dateEmployed
  .field
    = f.label :job_id, 'Job'
    %br/
    = f.text_field :job_id
  .field
    = f.label :department_id, 'Department'
    %br/
    = f.text_field :department_id
  .field
    = f.label :employee_birthday, 'Birthdate'
    %br/
    = f.date_select :employee_birthday
  .field
    = f.label :employee_age, 'Age'
    %br/
    = f.text_field :employee_age
  .field
    = f.label :employee_contactNumber, 'Contact Number'
    %br/
    = f.text_field :employee_contactNumber
  .field
    = f.label :employee_sss, 'SSS'
    %br/
    = f.text_field :employee_sss
  .field
    = f.label :employee_tin, 'TIN'
    %br/
    = f.text_field :employee_tin
  .field
    = f.label :employee_address, 'Address'
    %br/
    = f.text_area :employee_address
  .actions
    = f.submit
