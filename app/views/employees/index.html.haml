.block
  = render 'shared/menu/database'
  .content
    = render 'shared/menu/labors'
    .title_action_bar
      %h2 Employees
      .new_actions
        = link_to 'New Employee', new_employee_path, :class => 'button'
    .inner
      %table
        %tr
          %th Name
          %th Branch
          %th Date Employed
          %th Contact Number
          %th.actions{:colspan => 2} Actions
        - @employees.each do |employee|
          %tr
            %td= employee.full_name
            %td= employee.branch.location
            %td= employee.date_employed
            %td= employee.contact_number
            %td
              = link_to 'Timesheet', new_labor_hour_path(:employee_id => employee)
              = link_to 'View Timetable', labor_hours_listings_employee_path(employee)
            %td
              = link_to 'Show', employee
              = link_to 'Edit', edit_employee_path(employee)
              = link_to 'Destroy', employee, :confirm => 'Are you sure?', :method => :delete
