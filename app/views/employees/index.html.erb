<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.employee_firstName %></td>
    <td><%= employee.employee_lastName %></td>
    <td><% branchId = employee.branch_id %>
    	<% b = Branch.find(branchId) %>
    	<%= b.branch_location %></td>
    <td><%= employee.employee_dateEmployed %></td>
    <td><%= employee.job_id %></td>
    <td><%= employee.department_id %></td>
    <td><%= employee.employee_birthday %></td>
    <td><%= employee.employee_age %></td>
    <td><%= employee.employee_contactNumber %></td>
    <td><%= employee.employee_sss %></td>
    <td><%= employee.employee_tin %></td>
    <td><%= employee.employee_address %></td>
    <td><%= link_to 'Show', employee %></td>
    <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
    <td><%= link_to 'Destroy', employee, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

