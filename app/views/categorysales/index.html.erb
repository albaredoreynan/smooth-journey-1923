<div class="left"> 
<h2><a href="#">SALES BY CATEGORY</a></h2>
<hr />
<br/>
<% form_tag '/categorysales/search' do %>
<table width="500" border="0">
  <tr>
    <td>From:</td>
    <td><%= date_select(:start, params[:start], :start_year => 2000) %></td>
    <td><%= label_tag :restaurant %></td>
    <td><%= text_field_tag :restaurant  %></td>
  </tr>
  <tr>
    <td>To:</td>
    <td><%= date_select(:end, params[:end], :start_year => 2000) %></td>
    <td>Branch:</td>
    <td><%= text_field_tag :branch %></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><%= submit_tag :Search, :name => nil %></td>
    <td>&nbsp;</td>
  </tr>
</table>
<% end %>
<br/>

</div>
