= form_for(@category) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :category_name
    %br/
    = f.text_field :category_name
  .field
    = f.label :category_description
    %br/
    = f.text_area :category_description
  .field
    = f.label :restaurant_category_id
    %br/
    = f.text_field :restaurant_category_id
  .actions
    = f.submit
