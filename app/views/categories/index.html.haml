.block
  = render 'shared/menu/database'
  .content
    %h2 Categories
    .inner
      %table
        %tr
          %th Name
          %th Description
          %th Restaurant Category
          %th.actions Actions
        - @categories.each do |category|
          %tr
            %td= category.category_name
            %td= category.category_description
            %td= category.restaurant_category_id
            %td
              = link_to 'Show', category
              = link_to 'Edit', edit_category_path(category)
              = link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete
      = link_to 'New Category', new_category_path, :class => 'button'
