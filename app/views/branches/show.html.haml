.block
  .content
    .inner
      %p
        %b Restaurant:
        = link_to @branch.restaurant.name, restaurant_path(@branch.restaurant) unless @branch.restaurant.nil?
      %p
        %b Location:
        = @branch.location
      %p
        %b Address:
        = @branch.address
      %p
        %b Contact Number:
        = @branch.contact_number
      - if can? :edit, Branch
        = link_to 'Edit', edit_branch_path(@branch)
        |
      \#{link_to 'Back', branches_path}
