.block
  .content
    %h2 Branches
    .inner
      .left
        %hr/
        %br/
      .right
      %div{:style => "clear: both;"}
      %table
        %tr
          %th Restaurant
          %th Location
          %th Address
          %th Contact Number
          %th Actions
        - @branches.each do |branch|
          %tr
            %td= branch.restaurant_id
            %td= branch.branch_location
            %td= branch.branch_address
            %td= branch.branch_contactNumber
            %td
              = link_to 'Show', branch
              = link_to 'Edit', edit_branch_path(branch)
              = link_to 'Destroy', branch, :confirm => 'Are you sure?', :method => :delete
      = link_to 'New Branch', new_branch_path, :class => 'button'
