= form_for(@role) do |f|
  - if @role.errors.any?
    #error_explanation
      %h2
        = pluralize(@role.errors.count, "error")
        prohibited this role from being saved:
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
  .field
  %td= f.label :role_name
  %td= f.text_field :role_name
  %tr
  .actions
  %td &nbsp;
  %td= f.submit
