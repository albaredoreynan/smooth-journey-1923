-#- content_for :sidebar do
  -#%h3 Filters
  -#= form_tag '/sales/search', :method => :get do
    -#.input
      -#= label_tag 'From'
      -#= text_field_tag :start_date, nil, :class => 'datepicker'
    -#.input
      -#= label_tag 'To'
      -#= text_field_tag :end_date, nil, :class => 'datepicker'
    -#.input
      -#= label_tag :restaurant
      -#= collection_select(:restaurant, :name, Restaurant.all, :id, :name, :prompt => true)
    -#.input
      -#= label_tag :branch
      -#= collection_select(:branch, :location, Branch.all, :id, :location, :prompt => true)
    -#.actions
      -#= submit_tag :Search, :class => 'button'

.block
  = render :partial => 'shared/menu/sale'
  .content
    .title_action_bar
      %h2.title Listing Sales
      .new_actions
        = link_to 'New Sale', new_sale_path, :class => :button
    .inner
      %table
        %tr
          %th Date
          %th Branch
          %th.monetary Net Sales
          %th.monetary VAT
          %th.monetary Total Revenue
          %th.monetary Settlement Type Sales
          %th.monetary Cash for Deposit
          %th.actions= 'Actions'
        - @sales.each do |sale|
          %tr
            %td= sale.sale_date.strftime("%-d-%b-%Y")
            %td= sale.branch.location
            %td.monetary= sale.net_sales
            %td.monetary= sale.vat
            %td.monetary= sale.total_revenues
            %td.monetary= sale.total_settlement_type_sales
            %td.monetary= sale.cash_for_deposit
            %td
              = link_to 'Show', sale_path(sale)
        %tr.totals
          %td Grand Total
          %td.monetary &nbsp;
          %td.monetary &nbsp;
          %td.monetary &nbsp;
          %td.monetary &nbsp;
          %td.number &nbsp;
          %td.number &nbsp;
          %td.actions &nbsp;
