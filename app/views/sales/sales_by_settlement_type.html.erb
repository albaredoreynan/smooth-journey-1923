<h2><a href="#">Listing Sales by Settlement Type</a></h2>

<br/>
<table border="1">
  <tr>
	<th>Date</th>
 	<% @settlement_types.each do |settlementtype|%>
	<th><%= settlementtype.st_name %></th>
	<% end %>
	<th>VOIDS</th>
	<th>GROSS TOTAL</th>
	<th>NET TOTAL</th>
	<th></th>
  </tr>

<% @sales.each do |date,sale| %>
	<tr>
	<td><%= date.strftime("%B %d, %Y") %></td>
	<% @settlement_types.each do |settlementtype|%>
	<td><%= Ssrow.settlement_sales_sum(date,settlementtype.id) %></td>
  	<% end %>
  	<td><%= sale.map(&:void).sum %></td>
  	<td><%= sale.map(&:gross_total_ss).sum %></td>
  	<td><%= sale.map(&:net_total_ss).sum %></td>
  </tr>
<% end %>
  <tr>
	<td><b>TOTAL</b></td>
	<% @settlement_types.each do |settlementtype| %>
	<td><%= Ssrow.total_settlement_sales_sum(settlementtype.id) %></td>
  	<% end %>
  	<td><%= Sale.total_void() %></td>
  	<td><%= Sale.total_gross_total_ss() %></td>
  	<td><%= Sale.total_net_total_ss() %></td>
  </tr>
</table>
