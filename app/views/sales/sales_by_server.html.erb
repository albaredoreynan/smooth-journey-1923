</div>
<div style="clear:both;"></div>

<hr />
<h2><a href="#">Listing Sales by Server</a></h2>

<br/>
<table border="1">
  <tr>
	<th>Date</th>
	<th>Server Name</th>
 	<% @settlement_types.each do |settlementtype|%>
	<th><%= settlementtype.st_name %></th>
	<% end %>
	<th>VOIDS</th>
	<th>GROSS TOTAL</th>
	<th>NET TOTAL</th>
	<th></th>
  </tr>

<% @sales.each do |sale| %>
	<tr>
	<td><%= sale.date.strftime("%B %d, %Y") %></td>
	<td><%= sale.employee.employee_firstName %></td>
	<%  sale.ssrows.each do |ss| %>
		<td><%= ss.ss_amount %></td>
	<% end %>
	<td><%= sale.void %></td>
	<td><%= sale.gross_total_ss %></td>
	<td><%= sale.net_total_ss %></td>
	<td><% if sale.save_as_draft == 1 %>
    	<%= link_to "Edit", edit_sale_path(sale) %>
    	<% end %></td>
  </tr>
<% end %>
  <tr>
	<td><b>TOTAL</b></td>
	<td>&nbsp;</td>
	<% @settlement_types.each do |settlementtype| %>
	<td><%= Ssrow.total_settlement_sales_sum(settlementtype.id) %></td>
  	<% end %>
  	<td><%= Sale.total_void() %></td>
  	<td><%= Sale.total_gross_total_ss() %></td>
  	<td><%= Sale.total_net_total_ss() %></td>
  	<td>&nbsp;</td>
  </tr>
</table>
<br />

