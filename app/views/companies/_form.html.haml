= form_for(@company) do |f|
  - if @company.errors.any?
    #error_explanation
      %h2
        = pluralize(@company.errors.count, "error")
        prohibited this company from being saved:
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
  .field
  %td= f.label :name
  %td= f.text_field :name
  %tr
  .field
  %td= f.label :address
  %td= f.text_area :address, :rows => 3
  %tr
  .field
  %td= f.label :contact_number
  %td= f.text_field :contact_number
  %tr
  .actions
  %td &nbsp;
  %td= f.submit
