.block
  .content
    .left
      %h2
        %a{:href => "#"} VIEW RESTAURANT CATEGORY LIST
      %hr/
      %br/
    .right
    %div{:style => "clear: both;"}
    %table{:border => "1"}
      %tr
        %th Category listname
        %th Restaurant
        %th
        %th
        %th
      - @restaurantcategories.each do |restaurantcategory|
        %tr
          %td= restaurantcategory.category_listName
          %td= restaurantcategory.restaurant_id
          %td= link_to 'Show', restaurantcategory
          %td= link_to 'Edit', edit_restaurantcategory_path(restaurantcategory)
          %td= link_to 'Destroy', restaurantcategory, :confirm => 'Are you sure?', :method => :delete
    %br/
    = link_to 'New Restaurantcategory', new_restaurantcategory_path
