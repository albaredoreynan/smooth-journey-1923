<div class="left"> 
<h2><a href="#">VIEW PURCHASES</a></h2>
<hr />
<br/>
</div>

<div class="right"></div>
<div style="clear: both;"></div>

<% form_tag '/purchaseitems/search' do %>
<table>
	<tr>
		<td>From</td>
		<td><%= date_select(:start, '', :start_year => 2010) %></td>
		<td>To</td>
		<td><%= date_select(:end, '', :start_year => 2010) %></td>
		<td><%= submit_tag "Search" %></td>
	</tr>
</table>
<% end %>

<hr />
<h2><a href="#">SEARCH: <%= p "#{@searchdate} - #{@enddate}"%></a></h2>
<br />

<table border="1">
  <tr>
    <th>Purchase date</th>
    <th>Invoice</th>
    <th>Supplier</th>
    <th>Branch</th>
    <th>Inventory</th>
    <th>Purchase unitcost</th>
    <th>Purchase quantity</th>
    <th>Purchase amount</th>
    <th>Vat type</th>
    <th>Vat amount</th>
    <th>Net amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchaseitems.each do |date,purchaseitem| %>
  <tr>
    <td><%= date %></td>
    <td><%= purchaseitem.map(&:invoice_id).first %></td>
    <td><%= purchaseitem.map(&:supplier_id).first %></td>
    <td><%= purchaseitem.map(&:branch_id).first %></td>
    <td><%= purchaseitem.map(&:inventory_id).first %></td>
    <td><%= purchaseitem.map(&:purchase_unitCost).first %></td>
    <td><%= purchaseitem.map(&:purchase_quantity).first %></td>
    <td><%= purchaseitem.map(&:purchase_amount).first %></td>
    <td><%= purchaseitem.map(&:vat_type).first %></td>
    <td><%= purchaseitem.map(&:vat_amount).first %></td>
    <td><%= purchaseitem.map(&:net_amount).first %></td>
    <td><%= link_to 'Show', purchaseitem %></td>
    <td><%= link_to 'Edit', edit_purchaseitem_path(purchaseitem) %></td>
    <td><%= link_to 'Destroy', purchaseitem, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Purchaseitem', new_purchaseitem_path %>
