.left
  %h2
    %a{:href => "#"} VIEW PURCHASES
  %hr/
  %br/
.right
%div{:style => "clear: both;"}
- form_tag '/purchaseitems/search' do
  %table
    %tr
      %td From
      %td= date_select(:start, '', :start_year => 2010)
      %td To
      %td= date_select(:end, '', :start_year => 2010)
      %td= submit_tag "Search"
%hr/
%h2
  %a{:href => "#"}
    SEARCH: #{p "#{@searchdate} - #{@enddate}"}
%br/
%table{:border => "1"}
  %tr
    %th Purchase date
    %th Invoice
    %th Supplier
    %th Branch
    %th Inventory
    %th Purchase unitcost
    %th Purchase quantity
    %th Purchase amount
    %th Vat type
    %th Vat amount
    %th Net amount
    %th
    %th
    %th
  - @purchaseitems.each do |date,purchaseitem|
    %tr
      %td= date
      %td= purchaseitem.map(&:invoice_id).first
      %td= purchaseitem.map(&:supplier_id).first
      %td= purchaseitem.map(&:branch_id).first
      %td= purchaseitem.map(&:inventory_id).first
      %td= purchaseitem.map(&:purchase_unitCost).first
      %td= purchaseitem.map(&:purchase_quantity).first
      %td= purchaseitem.map(&:purchase_amount).first
      %td= purchaseitem.map(&:vat_type).first
      %td= purchaseitem.map(&:vat_amount).first
      %td= purchaseitem.map(&:net_amount).first
      %td= link_to 'Show', purchaseitem
      %td= link_to 'Edit', edit_purchaseitem_path(purchaseitem)
      %td= link_to 'Destroy', purchaseitem, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Purchaseitem', new_purchaseitem_path
