		<td><%= f.text_field :net_amount, :readonly => true, :id => "net_amount" %></td>
		<td></td>
	  </div>
  </tr>
  <tr>
	  <div class="actions">
	  	<td></td>
	  	<td><%= f.submit "Add another item", :button_value => "addAnotherItem" %><%= f.submit "Save as draft"%></td>
