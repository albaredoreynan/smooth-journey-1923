= form_for(@csrow) do |f|
  - if @csrow.errors.any?
    #error_explanation
      %h2
        = pluralize(@csrow.errors.count, "error")
        prohibited this csrow from being saved:
      %ul
        - @csrow.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :cs_id
    %br/
    = f.text_field :cs_id
  .field
    = f.label :cs_amount
    %br/
    = f.text_field :cs_amount
  .actions
    = f.submit
