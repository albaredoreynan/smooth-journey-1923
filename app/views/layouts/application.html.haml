!!!
%html
  %head
    %title RRBS
    = stylesheet_link_tag :all
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_tag :defaults, "rails.validations", "nested_form"
    = csrf_meta_tag
    :javascript
      function startCalc(){
          interval = setInterval("calc()",1);
      }
      function calc(){
        one = document.autoSumForm.firstBox.value;
        two = document.autoSumForm.secondBox.value;
        document.autoSumForm.thirdBox.value = (one * 1) + (two * 1);
      }
      function stopCalc(){
        clearInterval(interval);
      }
    %body
    #wrap
      #headerwrap
        #header
          %h1
            %a{:href => "#"} RRBS
          %h2 Restaurant Report and Backup System
        .sign_in
          - if user_signed_in?
            Signed in as #{current_user.email}. Not you?
            \#{link_to "Sign out", destroy_user_session_path}
          - else
            = link_to "Sign up", new_user_registration_path
            or #{link_to "sign in", new_user_session_path}
      %p.notice= notice
      %p.alert= alert
      #menu
        %ul
          %li= link_to 'Sales', sales_path
          %li= link_to 'Purchases', purchases_path
          %li= link_to 'Period End', endcounts_path
          %li
            %a{:href => ""} Inventory
          %li= link_to 'Employees', employees_path
          %li= link_to 'Reports', reports_path
          %li
            %a{:href => ""} Database
          %li
            %a{:href => ""} Records
          %li
            %a{:href => ""} User Accounts
      #content
        = yield
