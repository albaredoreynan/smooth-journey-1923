<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
  <tr>
	  <div class="field">
		<td><%= f.label :job_name %></td>
		<td><%= f.text_field :job_name %></td>
	  </div>
  </tr>
  <tr>
	  <div class="field">
		<td><%= f.label :department_id %></td>
		<td><%= f.collection_select :department_id, Department.find(:all), :id, :department_name, :prompt => "Select Department" %></td>
	  </div>
  </tr>
  <tr>
	  <div class="actions">
	    <td>&nbsp;</td>
		<td><%= f.submit %></td>
	  </div>
  </tr>
</table>
<% end %>
