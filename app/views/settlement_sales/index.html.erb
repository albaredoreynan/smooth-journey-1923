<h2><a href="#">Listing Sales by Settlement Type</a></h2>
<br/>
<table border="1">
  <tr>
    <th>Date</th>
 	<% @settlement_types.each do |settlementtype|%>
	<th><%= settlementtype.st_name %></th>
	<% end %>
    <th>VOIDS</th>
    <th>GROSS TOTAL</th>
    <th>NET TOTAL</th>
    
  </tr>

<% @settlement_sales.each do |date, settlement_sale| %>
  
<tr>
    <td><%= date %></td>
    <% @settlement_types.each do |st| %>
    	<td><%= Ssrow.joins('JOIN settlement_sales ON ssrows.settlement_sale_id = settlement_sales.id').where("settlement_type_id = ? AND ss_date = ?",st,date).all.map(&:ss_amount).sum %></td>
    <% end %>
    <td><%= settlement_sale.first.void %></td>
    <td><%= settlement_sale.first.gross_total %></td>
    <td><%= settlement_sale.first.net_total %></td>    
  </tr>
<% end %>
</table>

