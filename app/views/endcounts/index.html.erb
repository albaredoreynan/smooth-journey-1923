<div class="left"> 
<h2><a href="#">VIEW PERIOD END</a></h2>
<hr />
<br/>
</div>
<div class="left">
<%= form_tag '/endcounts/search' do %>
<table>
	<tr>
		<td>From</td>
		<td><%= date_select(:start, '', :start_year => 2010, :default => { :day => 1 } ) %></td>
	</tr>
	<tr>
		<td>To</td>
		<td><%= date_select(:end, '', :start_year => 2010) %></td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td><%= submit_tag :Search %></td>
	</tr>
</table>
<% end %>
</div>

<div class="right"></div>
<div style="clear: both;"></div>



<table border="1">
  <tr>
  	<th></th>
    <th>Beginning date</th>
    <th>Endcount date</th>
	<th>Item</th>
	<th>Beginning Count</th>
	<th>End Count</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<%= form_tag '/endcounts/savechecked' do %>
<% @endcounts.each do |endcount| %>
	<% for ecrow in endcount.ecrows %>
		<tr>
		<td><center><% if endcount.save_as_draft == 1 %>
    	<%= check_box_tag "endcount_ids[]", endcount.id %>
    	<% end %></center></td>
		<td><%= endcount.beginning_date.strftime("%B %d, %Y") %></td>
		<td><%= endcount.end_date.strftime("%B %d, %Y") %></td>
		<td><% inventoryId = ecrow.inventoryitem_id %>
    	<% i = Inventoryitem.find(inventoryId)%>
    	<%=h i.item_name %></td>
		<td><%=h number_with_precision(ecrow.beginning_count, :precision => 0) %></td>
		<td><%=h number_with_precision(ecrow.end_count, :precision => 0) %></td>
		<td><% if endcount.save_as_draft == 1 %>
			<%= link_to 'Edit', edit_endcount_path(endcount) %>
			<% end %></td>
		<td><% if endcount.save_as_draft == 1 %><%= link_to 'Destroy', endcount, :confirm => 'Are you sure?', :method => :delete %><% end %></td>
		</tr>
	<% end %> 
<% end %>

<tr>
	<td>
<%= submit_tag 'Submit records' %>
</td>
</tr>
</table>
<% end %>
<br />
<%= link_to 'New endcount', new_endcount_path %>