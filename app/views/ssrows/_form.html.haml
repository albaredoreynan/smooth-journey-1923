= form_for(@ssrow) do |f|
  - if @ssrow.errors.any?
    #error_explanation
      %h2
        = pluralize(@ssrow.errors.count, "error")
        prohibited this ssrow from being saved:
      %ul
        - @ssrow.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :settlement_type_id
    %br/
    = f.text_field :settlement_type_id
  .field
    = f.label :ss_amount
    %br/
    = f.text_field :ss_amount
  .actions
    = f.submit
