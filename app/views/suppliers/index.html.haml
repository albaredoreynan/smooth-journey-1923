.left
  %h2
    %a{:href => "#"} VIEW SUPPLIERS
  %hr/
  %br/
.right
%div{:style => "clear: both;"}
%table{:border => "1"}
  %tr
    %th Branch
    %th Supplier name
    %th Supplier email
    %th Supplier address
    %th Supplier description
    %th Supplier number
    %th
    %th
    %th
  - @suppliers.each do |supplier|
    %tr
      %td= supplier.branch_id
      %td= supplier.supplier_name
      %td= supplier.supplier_email
      %td= supplier.supplier_address
      %td= supplier.supplier_description
      %td= supplier.supplier_number
      %td= link_to 'Show', supplier
      %td= link_to 'Edit', edit_supplier_path(supplier)
      %td= link_to 'Destroy', supplier, :confirm => 'Are you sure?', :method => :delete
%br/
