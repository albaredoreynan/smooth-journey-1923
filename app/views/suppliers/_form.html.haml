= form_for(@supplier) do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2
        = pluralize(@supplier.errors.count, "error")
        prohibited this supplier from being saved:
      %ul
        - @supplier.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
  .field
  %td= f.label :branch_id
  %td= f.collection_select :branch_id, Branch.find(:all), :id, :location, :prompt => "Select Branch"
  %tr
  .field
  %td= f.label :name
  %td= f.text_field :name
  %tr
  .field
  %td= f.label :email
  %td= f.text_field :email
  %tr
  .field
  %td= f.label :address
  %td= f.text_area :address, :rows => 3
  %tr
  .field
  %td= f.label :description
  %td= f.text_area :description, :rows => 3
  %tr
  .field
  %td= f.label :contact_number
  %td= f.text_field :contact_number
  %tr
  .actions
  %td &nbsp;
  %td= f.submit
