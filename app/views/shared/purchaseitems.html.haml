.left
  %h2
    %a{:href => "#"} VIEW PURCHASES
  %hr/
  %br/
.right
%div{:style => "clear: both;"}
- form_tag '/purchase_items/index' do
  %table
    %tr
      %td From
      %td= date_select(:start, '', :start_year => 2010)
      %td To
      %td= date_select(:end, '', :start_year => 2010)
      %td= submit_tag "Search", :name => nil
%table{:border => "1"}
  %tr
    %th Purchase date
    %th Invoice
    %th Supplier
    %th Branch
    %th Inventory
    %th Purchase unitcost
    %th Purchase quantity
    %th Purchase amount
    %th Vat type
    %th Vat amount
    %th Net amount
    %th
    %th
    %th
  - @purchase_items.each do |purchaseitem|
    %tr
      %td= purchase_item.purchase_date
      %td= purchase_item.invoice_id
      %td= purchase_item.supplier_id
      %td= purchase_item.branch_id
      %td= purchase_item.inventory_id
      %td= purchase_item.unit_cost
      %td= purchase_item.quantity
      %td= purchase_item.amount
      %td= purchase_item.vat_type
      %td= purchase_item.vat_amount
      %td= purchase_item.net_amount
      %td= link_to 'Show', purchase_item
      %td= link_to 'Edit', edit_purchase_item_path(purchaseitem)
      %td= link_to 'Destroy', purchase_item, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New purchase_item', new_purchaseitem_path
