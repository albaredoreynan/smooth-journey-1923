.block
  .content
    .left
      = form_tag '/purchases/search' do
        %table.table_form
          %tr
            %td
              = 'From:'
              = date_select(:start, '', :start_year => 2010)
            %td
              = 'To:'
              = date_select(:end, '', :start_year => 2010)
            %td= submit_tag :Search
      %h2.title View Purchases
      .inner
        %table
          %tr
            %th{:class => 'checkbox'}
            %th Invoice number
            %th Invoice date
            %th Supplier
            %th Branch
            %th Subcategory
            %th Inventory item
            %th Purchase quantity
            %th Purchase Unit Cost
            %th Inventory Quantity
            %th Inventory Unit Cost
            %th Purchase Amount
            %th VAT-Type
            %th VAT-Amount
            %th Net-Amount
            %th Invoice total
            %th.actions Actions
          - totalamount = 0
          - totalnet = 0
          - totalvat = 0
          = form_tag '/purchases/savemultiple' do
            - @purchases.each do |purchase|
              - for purchaserow in purchase.purchaserows
                %tr
                  %td{:class => 'checkbox'}
                    - if purchase.save_as_draft == 1
                      = check_box_tag "purchase_ids[]", purchase.id
                  - purchase.created_at.strftime("%b %d, %Y")
                  %td= purchase.invoice_id
                  %td= purchase.purchase_date.strftime("%b %d, %Y")
                  %td
                    - supplierId = purchase.supplier_id
                    - s = Supplier.find(supplierId)
                    = purchaserow.purchase.supplier.name
                  %td
                    - branchId = purchase.branch_id
                    - b = Branch.find(branchId)
                    = b.location
                  %td
                    = purchaserow.item.category_name
                    = purchaserow.item.subcategory_name
                  %td= purchaserow.item.name
                  %td= number_with_precision(purchaserow.quantity, :precision => 0)+' '+purchaserow.unit.name
                  - itemId = purchaserow.item_id
                  - item = Item.find(itemId)
                  - q = purchaserow.quantity
                  - i = Item.find(itemId)
                  - unitId2 = i.unit_id
                  - unless unitId2.nil?
                    - u = Unit.find(unitId2)
                    - unit2 = u.name
                  - else
                    - unit2 = ''
                  %td.monetary= number_to_currency(purchaserow.unit_cost, :precision => 2, :unit => peso_sign)+' '+unit2
                  %td
                    - unitId1 = purchaserow.unit_id
                    - u = Unit.find(unitId1)
                    - unit1 = u.name
                    - if unitId1==unitId2
                      = number_with_precision(purchaserow.quantity, :precision => 0)
                    - else
                      - temp1 = Conversion.where("b_unit = ? and s_unit = ?",unitId1,unitId2)
                      - temp2 = Conversion.where("b_unit = ? and s_unit = ?",unitId2,unitId1)
                      - if temp1.count>0
                        - conversion_num = temp1.first.conversionNumber
                        - inventory_quantity = q*(1/(1/conversion_num))
                        = inventory_quantity
                      - else
                        - if temp2.count>0
                          - conversion_num = temp2.first.conversionNumber
                          - inventory_quantity = q*(1/conversion_num)
                          = inventory_quantity
                  %td
                    = unit1
                    and #{unit2}
                  - number_to_currency(purchaserow.unit_cost, :precision => 2, :unit => peso_sign)
                  %td.monetary= number_to_currency(purchaserow.amount, :precision => 2, :unit => peso_sign)
                  - totalamount = totalamount + purchaserow.amount
                  %td.monetary= purchaserow.vat_type
                  %td.monetary= number_to_currency(purchaserow.vat_amount, :precision => 2, :unit => peso_sign)
                  - totalvat = totalvat + purchaserow.vat_amount
                  %td= number_to_currency(purchaserow.net_amount, :precision => 2, :unit => peso_sign)
                  - totalnet = totalnet + purchaserow.net_amount
                  - invoicetotal = 0
                  %td.monetary
                    - @p = Purchaserow.where(:purchase_id => purchase.id)
                    - @p.each do |purchaserow|
                      - invoicetotal = invoicetotal + purchaserow.amount
                    = number_to_currency(invoicetotal, :precision => 2, :unit => peso_sign)
                  %td
                    = link_to 'Show', purchase
                    - if purchase.save_as_draft == 1
                      = link_to 'Edit', edit_purchase_path(purchase)
                  / <td><haml:silent> if purchase.save_as_draft == 1 </haml:silent><haml:block><haml:loud> link_to 'Destroy', purchase, :confirm =&amp;gt; 'Are you sure?', :method =&amp;gt; :delete </haml:loud></haml:block></td>
            %tr
              %td{:colspan => 10}
                = submit_tag 'Submit records'
                = submit_tag 'Delete records '
              / select checkboxes na checked
              %td
                %b Total
              %td.monetary
                %b= number_to_currency(totalamount, :precision => 2, :unit => peso_sign)
              %td
              %td.monetary
                %b= number_to_currency(totalvat, :precision => 2, :unit => peso_sign)
              %td.monetary
                %b= number_to_currency(totalnet, :precision => 2, :unit => peso_sign)
              %td.monetary
                %b= number_to_currency(totalamount, :precision => 2, :unit => peso_sign)
              %td &nbsp;
        = link_to 'New purchase', new_purchase_path, :class => :button
