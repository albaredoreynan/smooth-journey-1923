- content_for :head, javascript_include_tag(:purchases)
- content_for :sidebar do
  %h3 Add Item
  = render :partial => 'add_item_to_purchase', :locals => { :purchase => @purchase }

.block
  .content
    %h2.title New purchase
    .inner
      .purchase-form-wrapper
        = render 'form'
        = link_to 'Back', purchases_path, :class => :button
