.block
  /= render 'shared/menu/database'
  = render 'shared/menu/inventory'
  .content
    %h2.title Inventory Item
    .inner
      %table.table_form
        = form_tag inventoryitems_path, :method => 'get' do
          %tr
            %td
              = 'Inventory Item'
              = text_field_tag :search, params[:search]
              = submit_tag "Search", :name => nil
      %table
        %tr
          %th Item name
          %th Unit
          %th Beginning Count
          %th.actions Actions
        - @inventoryitems.each do |inventoryitem|
          %tr
            %td= inventoryitem.name
            %td= inventoryitem.unit.name
            %td= inventoryitem.beginning_count
            %td
              = link_to 'Show', inventoryitem
              = link_to 'Edit', edit_inventoryitem_path(inventoryitem)
              = link_to 'Destroy', inventoryitem, :confirm => 'Are you sure?', :method => :delete
      = link_to 'New Inventory Item', new_inventoryitem_path, :class => :button
