<%= form_for(@inventoryitem) do |f| %>
  <% if @inventoryitem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inventoryitem.errors.count, "error") %> prohibited this inventoryitem from being saved:</h2>

      <ul>
      <% @inventoryitem.errors.full_messages.each do |msg| %>
